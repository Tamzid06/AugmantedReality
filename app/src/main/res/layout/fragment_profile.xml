<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profilebg12">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="157dp"
        android:contentDescription="@string/nav_header_desc"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pro_pic" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="63dp"
                android:layout_height="23dp"
                android:layout_marginStart="20dp"
                android:text="Name"
                android:textColor="#9A302929"
                android:textSize="16sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/signUpName4"
                android:layout_width="263dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginTop="0dp"
                android:ems="10"
                android:hint="KIRITI"
                android:inputType="textPersonName"
                android:textColorHint="#0F0505"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp">

            <View
                android:id="@+id/gap2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="20dp"
                android:background="#8DAFABA9" />

            <View
                android:id="@+id/v2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#8DAFABA9" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="13dp"
                android:text="@string/prompt_email"
                android:textColor="#9A302929"
                android:textSize="16sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textViewk"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginTop="13dp"
                android:text="thisismymail@gmail.com"
                android:textColor="#0F0505"
                android:textSize="17sp" />/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp">

            <View
                android:id="@+id/gap11"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="20dp"
                android:background="#8DAFABA9" />

            <View
                android:id="@+id/view48"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#8DAFABA9" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="63dp"
                android:layout_height="23dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="13dp"
                android:text="Phone"
                android:textColor="#9A302929"
                android:textSize="16sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/signUpName6"
                android:layout_width="286dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="13dp"
                android:ems="10"
                android:hint="+8801556542573"
                android:inputType="textPersonName"
                android:textColorHint="#0F0505"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp">

            <View
                android:id="@+id/gap111"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="20dp"
                android:background="#8DAFABA9" />

            <View
                android:id="@+id/view85"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#8DAFABA9" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="13dp"
                android:text="BirthDay"
                android:textColor="#9A302929"
                android:textSize="16sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/signUpName7"
                android:layout_width="286dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="13dp"
                android:ems="10"
                android:hint="01-01-2020"
                android:inputType="textPersonName"
                android:textColorHint="#0F0505"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp">

            <View
                android:id="@+id/gap1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="20dp"
                android:background="#8DAFABA9" />

            <View
                android:id="@+id/view8"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#8DAFABA9" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="405dp"
        android:layout_height="66dp"
        android:layout_marginTop="60dp"
        android:background="#F84AA9C5"
        android:text="@string/common_google_play_services_update_button"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>